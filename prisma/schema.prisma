generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model FacebookPage {
  id            String   @id // Facebook Page ID
  name          String
  accessToken   String
  picture       String?
  followersCount Int?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  // Relation to scheduled posts
  scheduledPosts ScheduledPost[]
  
  @@map("facebook_pages")
}

model ScheduledPost {
  id            String   @id @default(cuid())
  title         String
  content       String?
  postType      String   // 'text', 'image', 'video', 'carousel'
  mediaUrls     String[] // Array of media URLs
  carouselImages String[] // Array of carousel image URLs
  pageId        String
  pageName      String
  status        String   @default("scheduled") // 'scheduled', 'posted', 'failed', 'cancelled'
  scheduledFor  DateTime
  intervalMinutes Int?   // For recurring posts
  isRecurring   Boolean  @default(false)
  firstComment  String?
  postFirstComment Boolean @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  postedAt      DateTime?
  facebookPostId String?
  errorMessage  String?
  
  // Relation to Facebook page
  facebookPage  FacebookPage @relation(fields: [pageId], references: [id])

  @@map("scheduled_posts")
}
